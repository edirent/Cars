<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8" />
  <title>二手车搜索示例</title>
  <!-- 引入 Bootstrap 5 CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <style>
    /* 自定义样式 */
    body {
      font-family: "Microsoft YaHei", sans-serif;
    }
    .navbar-brand {
      font-weight: bold;
      font-size: 1.2rem;
    }
    .hero-section {
      background-color: #f8f9fa;
      padding: 2rem 1rem;
      margin-bottom: 2rem;
      border-bottom: 1px solid #e0e0e0;
    }
    .hero-title {
      font-size: 2rem;
      font-weight: bold;
      margin-bottom: 1rem;
    }
    .hero-subtitle {
      font-size: 1.2rem;
      color: #666;
      margin-bottom: 2rem;
    }
    .search-box {
      background: #fff;
      padding: 1rem;
      border-radius: 0.5rem;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
      margin-bottom: 2rem;
    }
    .search-box label {
      font-weight: 500;
    }
    .section-title {
      font-size: 1.5rem;
      font-weight: 600;
      margin-bottom: 1.5rem;
    }
    .card {
      margin-bottom: 1rem;
    }
    footer {
      background-color: #f8f9fa;
      padding: 1rem;
      text-align: center;
      margin-top: 2rem;
      border-top: 1px solid #e0e0e0;
    }
  </style>
</head>
<body>

  <!-- 导航栏 -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="#">MyCar</a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="切换导航"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="#">买车</a>
          </li>
          <li class="nav-item">
            <!-- 导航栏中的卖车链接指向 /post -->
            <a class="nav-link" href="/post">卖车</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">帮助</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Hero 区域 -->
  <div class="hero-section">
    <div class="container">
      <div class="row align-items-center">
        <!-- 文案区域 -->
        <div class="col-md-6">
          <h1 class="hero-title">Buy with confidence.</h1>
          <p class="hero-subtitle">
            Everything you need to browse nearly every car in one place.
          </p>
          <!-- 搜索表单 -->
          <div class="search-box">
            <form>
              <div class="row g-2">
                <div class="col-md-6">
                  <label for="make" class="form-label">Make</label>
                  <select id="make" class="form-select">
                    <option>Any Make</option>
                    <option>Toyota</option>
                    <option>Honda</option>
                    <option>BMW</option>
                  </select>
                </div>
                <div class="col-md-6">
                  <label for="model" class="form-label">Model</label>
                  <select id="model" class="form-select">
                    <option>Any Model</option>
                    <option>Corolla</option>
                    <option>Civic</option>
                    <option>3 Series</option>
                  </select>
                </div>
              </div>
              <div class="row g-2 mt-2">
                <div class="col-md-6">
                  <label for="year" class="form-label">Min Year</label>
                  <select id="year" class="form-select">
                    <option>Any Year</option>
                    <option>2015</option>
                    <option>2018</option>
                    <option>2020</option>
                  </select>
                </div>
                <div class="col-md-6">
                  <label for="price" class="form-label">Max Price</label>
                  <select id="price" class="form-select">
                    <option>Any Price</option>
                    <option>$10,000</option>
                    <option>$20,000</option>
                    <option>$30,000</option>
                  </select>
                </div>
              </div>
              <div class="row g-2 mt-2">
                <div class="col-md-6">
                  <label for="mileage" class="form-label">Any Mileage</label>
                  <select id="mileage" class="form-select">
                    <option>Any</option>
                    <option>Under 50k</option>
                    <option>Under 100k</option>
                  </select>
                </div>
                <div class="col-md-6">
                  <label for="zip" class="form-label">ZIP Code</label>
                  <input type="text" id="zip" class="form-control" placeholder="例如 100000">
                </div>
              </div>
              <button type="submit" class="btn btn-primary w-100 mt-3">
                搜索
              </button>
            </form>
          </div>
          <!-- 主页面中增加一个卖车按钮 -->
          <div class="mt-3">
            <a href="/post" class="btn btn-secondary">卖车</a>
          </div>
        </div>
        <!-- 图片区域：替换为本地 cars.png -->
        <div class="col-md-6 text-center mt-4 mt-md-0">
          <img
            src="/images/cars.png"
            alt="Car"
            class="img-fluid"
          />
        </div>
      </div>
    </div>
  </div>

  <!-- 车源列表展示区域 -->
  <div class="container mb-5">
    <h2 class="section-title">车源列表</h2>
    <div class="row">
      <% listings.forEach(function(car) { %>
      <div class="col-md-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= car.title %></h5>
            <p class="card-text">价格：<%= car.price %></p>
            <a href="/listing/<%= car.id %>" class="btn btn-primary">查看详情</a>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </div>

  <!-- 底部区域 -->
  <footer>
    <p>© 2025 MyCar. All rights reserved.</p>
  </footer>

  <!-- Bootstrap 5 JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
